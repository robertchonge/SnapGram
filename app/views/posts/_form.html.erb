<%= form_with model: @post, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :caption %>
    <%= f.text_field :caption, class: "border p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :image %>
    <%= f.file_field :image, class: "border p-2 w-full", data: { action: "change->filter-preview#update" } %>
  </div>

  <div class="mb-4">
    <%= f.label :filter %>
    <%= f.select :filter, options_for_select(["none", "grayscale", "sepia", "blur"]), {}, class: "border p-2 w-full", data: { action: "change->filter-preview#update" } %>
  </div>

  <%= f.submit "Post", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
<% end %>
